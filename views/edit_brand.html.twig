<html>
    <body>
        <h1>You are editing {{ brand.getName }}</h1>

        {% set brands_stores = brand.getStores %}
        <h3>Brands:</h3>
        {% for brand in brands_stores %}
            <ul>
                <li>{{ brand.getName }}</li>
            </ul>
            {% endfor %}
            <form action="/brand/{{ brand.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">
                <label for="name">New Name</label>
                <input id="name" name="name" type="text">

                <label for="add_store">Add Store</label>
                <input id="add_store" name="add_store" type="text">

                <button type="submit">Update</button>
            </form>
    </body>
</html>
