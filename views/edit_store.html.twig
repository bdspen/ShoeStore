<html>

    <body>

        <h1>You are editing {{ store.getName }}</h1>


        {% set brands_stores = store.getBrands %}
        <h3>Brands:</h3>
        {% for brand in brands_stores %}
            <ul>
                <li>{{ brand.getName }}
                    <form action='/store/{{ store.getId }}/delete_brand' method="post">
                        <input type='hidden' name='brand_id' value='{{ brand.getId }}'>
                        <input name="_method" type="hidden" value="delete">
                        <button type='submit'>Delete</button>
                    </form>

                </form></li>
            </ul>
            {% endfor %}
            <form action="/store/{{ store.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">
                <label for="name">New Name</label>
                <input id="name" name="name" type="text">

                <label for="add_brand">Add Additional Brand</label>
                <input id="add_brand" name="add_brand" type="text">

                <button type="submit">Update</button>
            </form>
            <form action="/store/{{store.getId}}/delete" method='post'>
                <input name="_method" type="hidden" value="delete">
                <button type='submit'>Delete</button>
            </form>
    </body>
</html>
